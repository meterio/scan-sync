{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom", "ES2021.String"],
    "resolveJsonModule": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
